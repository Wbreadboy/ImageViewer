<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.breadboy.android.imageviewer">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".application.ImageViewerApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".imagelist.view.ImageListActivity"
			android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
			android:label="@string/title_activity_image_list"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".intro.IntroActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
		<activity android:name=".detailedimage.view.DetailedImageActivity">
		</activity>
	</application>

</manifest>